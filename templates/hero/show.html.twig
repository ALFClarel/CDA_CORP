{% extends 'base.html.twig' %}

{% block title %}Hero{% endblock %}

{% block body %}
    <h1>Hero</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hero.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hero.name }}</td>
            </tr>
            <tr>
                <th>AlterEgo</th>
                <td>{{ hero.alterEgo }}</td>
            </tr>
            <tr>
                <th>Equipment</th>
                <td>{{ hero.equipment }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{{ hero.Available ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>EnergyLevel</th>
                <td>{{ hero.energyLevel }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ hero.biography }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ hero.imageName }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ hero.createdAt ? hero.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_hero_index') }}">back to list</a>

    <a href="{{ path('app_hero_edit', {'id': hero.id}) }}">edit</a>

    {{ include('hero/_delete_form.html.twig') }}
{% endblock %}
